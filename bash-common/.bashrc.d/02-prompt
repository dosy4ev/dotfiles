# Prompt

if [ -f /usr/share/git/completion/git-prompt.sh ]; then
    . /usr/share/git/completion/git-prompt.sh
fi

RESET='\[\033[00m\]'
GREEN='\[\033[32m\]'
BLUE='\[\033[34m\]'
RED='\[\033[33m\]'
GIT_BRANCH='$(__git_ps1 "[git: %s]")'
PS1="${GREEN}[\w]$RED${GIT_BRANCH}\n${BLUE}[\u@\h]${RESET}$ "

# vim: ft=sh
